{% extends '::base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}

    <link rel="stylesheet" href="{{ asset('bundles/user/css/login.css') }}" />
{% endblock %}

{% block body %}
    <section class="login">
        <article>
            <h1>Register</h1>
            <form action="{{ path('user_register') }}" method="POST" novalidate>
                <div class="awesome-username-wrapper">
                    {{ form_errors(form) }}
                </div>
                {{ form_row(form.username, {'attr': { 'class': 'a-clever-class', 'help' : 'choose something' }}) }}
                {{ form_row(form.email) }}
                {{ form_row(form.plainPassword.first) }}
                {{ form_row(form.plainPassword.second) }}

                {{ form_rest(form) }}
                <input type="submit" value="Register" class="btn btn-primary pull-right"/>
            </form>

        </article>
    </section>
{% endblock %}